{
  "name": "announcing-client",
  "private": true,
  "watch": {
    "copy-shared": {
      "patterns": [
        "../shared-ui/src",
        "../shared/src"
      ],
      "extensions": "ts,tsx,scss"
    }
  },
  "scripts": {
    "build": "rm -rf www && npm run copy-shared && stencil build",
    "build.cap": "rm -rf cap && npm run copy-shared && CAP_BUILD=y stencil build && cap sync && cp google-services.json android/app",
    "serve": "stencil build --dev --watch --serve --service-worker",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watch",
    "copy-shared": "node copy-shared.js",
    "copy-shared.watch": "npm-watch copy-shared",
    "start": "run-p copy-shared.watch serve"
  },
  "devDependencies": {
    "@capacitor-community/http": "^1.0.0-alpha.5",
    "@capacitor/android": "^3.0.0-rc.3",
    "@capacitor/app": "^0.3.10",
    "@capacitor/cli": "^3.0.0",
    "@capacitor/core": "^3.0.0-rc.3",
    "@capacitor/push-notifications": "^0.3.10",
    "@capacitor/share": "^0.5.7",
    "@capacitor/storage": "^0.3.10",
    "@rollup/plugin-replace": "^2.4.2",
    "@stencil/core": "^2.5.2",
    "@stencil/sass": "^1.4.1",
    "@stencil/store": "^1.4.1",
    "autolinker": "^3.14.3",
    "base-x": "^3.0.8",
    "bootstrap-icons": "^1.5.0",
    "date-fns": "^2.21.3",
    "destyle.css": "^2.0.2",
    "firebase": "^8.6.2",
    "fs-extra": "^9.1.0",
    "intersection-observer": "^0.12.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.9.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "tweetnacl": "^1.0.3",
    "type-fest": "^1.1.3",
    "workbox-build": "^4.3.1"
  }
}

{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "baseUrl": ".",
    "paths": {
      "@announcing-shared/path-matcher": ["../shared/src/path-matcher.ts"],
      "@announcing-shared": ["../shared/src"],
      "@announcing-shared-ui": ["../shared-ui2/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

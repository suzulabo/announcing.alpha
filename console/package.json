{
  "name": "announcing-console",
  "private": true,
  "watch": {
    "copy-shared": {
      "patterns": [
        "../shared-ui/src",
        "../shared/src"
      ],
      "extensions": "ts,tsx,scss"
    }
  },
  "scripts": {
    "build": "rm -rf www && npm run copy-shared && stencil build",
    "serve": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watch",
    "copy-shared": "node copy-shared.js",
    "copy-shared.watch": "node copy-shared.js -w",
    "start": "npm run copy-shared && run-p copy-shared.watch serve"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^2.4.2",
    "@stencil/core": "^2.5.2",
    "@stencil/sass": "^1.4.1",
    "@stencil/store": "^1.4.1",
    "@types/pica": "^5.1.2",
    "autolinker": "^3.14.3",
    "bootstrap-icons": "^1.4.1",
    "date-fns": "^2.20.1",
    "destyle.css": "^2.0.2",
    "firebase": "^9.0.0-beta.2",
    "fs-extra": "^9.1.0",
    "intersection-observer": "^0.12.0",
    "npm-run-all": "^4.1.5",
    "pica": "^6.1.1",
    "qr-code-styling": "^1.3.4",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "sync-directory": "^2.2.22",
    "type-fest": "^1.2.1"
  }
}

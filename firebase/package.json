{
  "name": "announcing-firebase",
  "private": true,
  "scripts": {
    "build:func": "npm --prefix ./functions run build",
    "build:func:watch": "npm --prefix ./functions run build.watch",
    "build:console": "rm -rf console && npm --prefix ../console run build && cp -a ../console/www console",
    "build:client": "rm -rf client && npm --prefix ../client run build && cp -a ../client/www client",
    "build": "run-s build:*",
    "serve": "firebase emulators:start --import=./emu-data --export-on-exit",
    "start": "run-p build:func:watch serve",
    "deploy": "firebase deploy",
    "firestore-indexes": "node firestore-indexes-gen.js > firestore.indexes.json"
  },
  "devDependencies": {
    "firebase-tools": "^9.14.0",
    "npm-run-all": "^4.1.5"
  }
}

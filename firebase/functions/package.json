{
  "name": "announcing-functions",
  "private": true,
  "watch": {
    "copy-shared": {
      "patterns": [
        "../../shared/src"
      ],
      "extensions": "ts,tsx,scss"
    }
  },
  "scripts": {
    "clean": "rm -rf lib && rm -rf src/shared*",
    "build": "npm run clean && npm run copy-shared && tsc -p tsconfig.build.json",
    "tsc.watch": "tsc -w -p tsconfig.build.json",
    "build.watch": "run-p copy-shared.watch tsc.watch",
    "test": "FIREBASE_CONFIG={} jest",
    "test.watch": "FIREBASE_CONFIG={} jest --watch",
    "copy-shared": "node copy-shared.js",
    "copy-shared.watch": "npm-watch copy-shared",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "devDependencies": {
    "@google-cloud/pubsub": "^2.11.0",
    "@types/cors": "^2.8.10",
    "@types/jest": "^26.0.23",
    "base-x": "^3.0.8",
    "cors": "^2.8.5",
    "date-fns-tz": "^1.1.4",
    "firebase-admin": "^9.7.0",
    "firebase-functions": "^3.13.0",
    "firebase-functions-test": "^0.2.3",
    "fs-extra": "^10.0.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.9.0",
    "ts-jest": "^26.5.6",
    "tweetnacl": "^1.0.3",
    "type-fest": "^1.0.2",
    "typescript": "^4.2.4"
  }
}

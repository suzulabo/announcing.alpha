{
  "name": "announcing-functions",
  "private": true,
  "scripts": {
    "clean": "rm -rf lib && rm -rf src/shared*",
    "build": "npm run clean && npm run copy-shared && tsc -p tsconfig.build.json",
    "tsc.watch": "tsc -w -p tsconfig.build.json",
    "build.watch": "run-p copy-shared.watch tsc.watch",
    "test": "FIREBASE_CONFIG={} jest",
    "test.watch": "FIREBASE_CONFIG={} jest --watch",
    "copy-shared": "node copy-shared.js",
    "copy-shared.watch": "node copy-shared.js -w",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/pubsub": "^2.12.0",
    "base-x": "^3.0.8",
    "date-fns": "^2.21.3",
    "date-fns-tz": "^1.1.4",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "tweetnacl": "^1.0.3",
    "type-fest": "^1.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "sync-directory": "^2.2.22",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  }
}

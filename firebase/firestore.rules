rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{id} {
      allow get: if request.auth != null && request.auth.uid == id;
    }

    match /images/{id} {
      allow get: if request.auth.uid != null;
    }

    match /announces/{id} {
      allow get: if true;

      match /meta/{metaID} {
        allow get: if request.auth.uid != null;
      }
      match /posts/{postID} {
        allow get: if request.auth.uid != null;
      }
    }
  }
}
